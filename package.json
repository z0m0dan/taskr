{
  "name": "taskr",
  "displayName": "Taskr",
  "description": "Task reminder for day to day productivity",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.77.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/z0m0dan/taskr"
  },
  "icon": "media/logo.jpg",
  "publisher": "zomodan",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:taskr-sidebar-view"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "taskr-sidebar-view",
          "title": "Taskr",
          "icon": "media/task.svg"
        }
      ]
    },
    "views": {
      "taskr-sidebar-view": [
        {
          "type": "webview",
          "id": "taskr-sidebar",
          "name": "Taskr",
          "icon": "media/heart.svg",
          "contextualTitle": "Taskr"
        }
      ]
    },
    "commands": [
      {
        "command": "taskr.createValue",
        "category": "Taskr",
        "title": "Create a new task"
      },
      {
        "command": "taskr.getValue",
        "category": "Taskr",
        "title": "Show task on console"
      },
      {
        "command": "taskr.clearTasks",
        "category": "Taskr",
        "title": "Clear all the tasks"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "~16.18.23",
    "@types/node-cron": "^3.0.7",
    "@types/react": "^18.0.33",
    "@types/react-dom": "^18.0.11",
    "@types/uuid": "^9.0.1",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.38.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.78.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "node-cron": "^3.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.0",
    "vite": "^4.2.1"
  }
}
